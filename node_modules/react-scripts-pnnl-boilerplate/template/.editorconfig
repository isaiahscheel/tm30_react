# editorconfig.org
# this file helps auto-configure your editor to follow preferred formatting rules
# if using sublime, use package-control to install 'EditorConfig' and editor settings
# should change accordingly
root = true

[*]
end_of_line = lf

[*.js]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.jsx, *.tsx]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.jade]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2